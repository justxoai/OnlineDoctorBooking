<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Time Column -->
        <TextView
            android:id="@+id/timeTV"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:gravity="start|center_vertical"
            android:text="10:00"
            android:textColor="#37474F"
            android:textSize="18sp"/>

        <!-- Divider -->
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#000000" />

        <!-- Event Details -->
        <LinearLayout
            android:id="@+id/event_daily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginStart="8dp">

            <!-- Event Name with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/accent_color"
                    android:background="@drawable/patient"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:padding="8dp"
                    android:text="Consultation with Patient"
                    android:textColor="#37474F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Information -->
            <TextView
                android:id="@+id/patient_name_daily_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="5dp"
                android:text="Patient Name"
                android:textColor="#37474F"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/appointment_type_daily_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="5dp"
                android:text="Appointment Type"
                android:textColor="#78909C"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>