<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Doctor.Appointment.Fragment.CreateAppointment">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Create Availability"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"/>

    <!-- Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/monthYearTV_create_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date/Month/Year"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Create Availability: Days Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/schedule"
                            android:backgroundTint="#26A69A"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select Days"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#37474F"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E8ECEF"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/days_checkbox_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/checkbox_mon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Monday 23/06/2025"
                                android:textColor="#37474F"
                                android:textSize="16sp"
                                android:buttonTint="#26A69A"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/checkbox_tue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tuesday 24/06/2025"
                                android:textColor="#37474F"
                                android:textSize="16sp"
                                android:buttonTint="#26A69A" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/checkbox_wed"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Wednesday 25/06/2025"
                                android:textColor="#37474F"
                                android:textSize="16sp"
                                android:buttonTint="#26A69A" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/checkbox_thu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Thursday 26/06/2025"
                                android:textColor="#37474F"
                                android:textSize="16sp"
                                android:buttonTint="#26A69A"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/checkbox_fri"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Friday 27/06/2025"
                                android:textColor="#37474F"
                                android:textSize="16sp"
                                android:buttonTint="#26A69A"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/checkbox_sat"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Saturday 28/06/2025"
                                android:textColor="#37474F"
                                android:textSize="16sp"
                                android:buttonTint="#26A69A"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/checkbox_sun"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sunday 29/06/2025"
                                android:textColor="#37474F"
                                android:textSize="16sp"
                                android:buttonTint="#26A69A" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/error_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*Please select at least one day"
                            android:textColor="#EF5350"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Create Availability: Time Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/time"
                            android:backgroundTint="#26A69A" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select Time"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#37474F"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E8ECEF"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Start Time -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/start_time_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Start Time"
                        app:hintTextColor="#78909C"
                        app:boxStrokeColor="#E8ECEF"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/input_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/CustomEditTextStyle"
                            android:inputType="time"
                            android:textColor="#37474F"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- End Time -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/end_time_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="End Time"
                        app:hintTextColor="#78909C"
                        app:boxStrokeColor="#E8ECEF"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/input_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/CustomEditTextStyle"
                            android:inputType="time"
                            android:textColor="#37474F"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Create Button -->
                    <Button
                        android:id="@+id/create_slots_button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Create Slots"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:backgroundTint="@color/accent_color"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>